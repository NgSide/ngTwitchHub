{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "removeComments": true,
      "target": "es5",
      "outDir": "../out-tsc/app",
      "module": "CommonJS",
      "lib": ["es2016", "dom"],
      "sourceMap": true,
      "inlineSourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "types": ["node"],
      "typeRoots": [ "../node_modules/@types" ]
    },
    "exclude": [
      "node_modules",
      "test.ts",
      "**/*.spec.ts"
    ]
  }
  